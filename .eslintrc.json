{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "eslint-plugin-jsx-a11y",
    "eslint-plugin-import",
    "eslint-plugin-react",
    "eslint-plugin-prettier"
  ],

  "rules": {
    "indent": [0, "space"],
    "react/jsx-props-no-spreading": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-one-expression-per-line": 0,
    "no-alert": 2,
    "no-restricted-globals": 0,
    "endOfLine": 0,
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "react/react-in-jsx-scope": 0,
    "allowTemplateLiterals": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-console": 0,
    "spaced-comment": 0,
    "treatUndefinedAsUnspecified": 0,
    "prettier/prettier": 2,
    "consistent-return": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "no-process-exit": 0,
    "no-param-reassign": 0,
    "no-return-await": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "import/prefer-default-export": 0,
    "prefer-destructuring": [0, { "object": true, "array": false }],
    "camelcase": 0,
    "react/prop-types": [0, { "ignore": 0, "customValidators": 0, "skipUndeclared": 0 }],
    "jsx-a11y/no-static-element-interactions": [
      "error",
      {
        "handlers": []
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      0,
      {
        "components": ["Link"],
        "specialLink": ["hrefLeft", "hrefRight"],
        "aspects": ["noHref", "invalidHref", "preferButton"]
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      0,
      {
        "version": ">=8.0.0",
        "ignores": []
      }
    ],
    "no-unused-vars": [
      1,
      {
        "argsIgnorePattern": "req|res|next|val|err|fn"
      }
    ]
  }
}
